<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="#808080"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/stock_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="ASHOKLEY"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />


    <TextView
        android:id="@+id/ltp_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="23,330"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stock_name_tv" />

    <TextView
        android:id="@+id/ltp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="LTP:"
        app:layout_constraintBottom_toBottomOf="@+id/ltp_value_tv"
        app:layout_constraintEnd_toStartOf="@+id/ltp_value_tv"
        app:layout_constraintTop_toTopOf="@+id/ltp_value_tv" />

    <TextView
        android:id="@+id/profit_and_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="23,330"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ltp_value_tv"
        app:layout_constraintTop_toBottomOf="@+id/ltp_value_tv" />

    <TextView
        android:id="@+id/profit_and_value_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="LTP:"
        app:layout_constraintBottom_toBottomOf="@+id/profit_and_value_tv"
        app:layout_constraintEnd_toStartOf="@+id/profit_and_value_tv"
        app:layout_constraintTop_toTopOf="@+id/profit_and_value_tv" />

    <TextView
        android:id="@+id/qt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="NET QTY:"
        app:layout_constraintStart_toStartOf="@+id/stock_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/stock_name_tv" />

    <TextView
        android:id="@+id/qt_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/qt_tv"
        app:layout_constraintTop_toTopOf="@+id/qt_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>